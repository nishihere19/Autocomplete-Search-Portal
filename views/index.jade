extends layout
.nav
  block nav
      ul.main-menu
        li
          a(href='/') Home
        li
          a(href='registerform') Register
        li
          form(action="/search", method="post")
            input(type="search", name="searchbar" id="searchbar" placeholder="Enter roll no. or name")
            input(type="submit", value="Search")
        
  
block content
  h1.title= title
  p(style="color: white;") #{msg}
  form(action="/dept", method="post")
    input(type="search", name="searchdept" placeholder="Type Roll No.")
    input(type="submit" value="Department" class="dept")
  p(style="color: lightblue;") #{msg1}
  script.
      $(function(){
        $('#searchbar').autocomplete({
          //console.log("w");
          source: function(req,res){
            $.ajax({
              url:"/autocomplete",
              dataType:"jsonp",
              type: "GET",
              data: req,
              success: function(data){
                res(data);
              },
              error: function(err){
                console.log(err);
              }
            });
          },
          minLength:1,
          select: function(event,ui){
            if(ui.item){
              $('#searchbar').text(ui.item.label);
            }
          }
        })
      });
  block form
